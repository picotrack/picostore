<% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
<% else %>
  <%= content_tag :h1, "Please Log in" %>
<% end %>
<%= form_with url: sessions_create_path do |f| %>
  <%= f.text_field :email, placeholder: "email" %><br>
  <%= f.text_field :name, placeholder: "name" %><br>
  <%= f.password_field :password, placeholder: "password" %><br>
  <%= f.submit "Sign In!" %>
<% end %>
