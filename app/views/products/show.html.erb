<div class="bg-black" style="height: 100vw; max-height: 448px; flex-shrink: 0; -webkit-flex: 0;">
  <% if @product.image.exists? %>
    <img class="object-cover" style="width: 100%; height: 100vw; max-height: 448px;" src="<%= url_for @product.image %>" alt="" />
  <% else %>
    <img class="object-cover" style="width: 100%; height: 100vw; max-height: 448px;" src="http://placehold.jp/400x400.png" alt="" />
  <% end %>
</div>
<div class="p-6 relative bg-white rounded-tl-3xl rounded-tr-3xl" style="bottom: 30px;">
  <div class="flex flex-col w-full">
    <div class="font-bold text-2xl text-gray-900 mb-2"><%= @product.name %></div>
    <div class="font-light text-sm mb-2" >by <b><%= @product.owner.name %></b></div>
    <div class="flex flex-row items-center justify-stretch w-full">
      <div class="flex flex-row items-center justify-start space-x-2">
        <div class="space-x-1">
          <i class="fa-solid fa-star"></i>
          <span class="text-sm">4.2</span>
          <span class="text-sm text-gray-400 font-light"> (36,821 개의 평점) </span>
        </div>
      </div>
      <div class="flex-1"></div>
      <div class="text-xl font-semibold"><%= @product.price_tag %></div>
    </div>
  </div>
  <div class="py-4"></div>
  <div class="text-gray-600 text-md trix-content">
    <%= @product.description %>
  </div>
  <div class="flex flex-col space-y-2">
  </div>
</div>
<div class="flex flex-1"></div>
<div class="sticky bottom-0 w-full bg-transparent p-6">
  <a
    href="/orders/new?product_id=<%= @product.id %>"
    style="background-color: var(--primary-color);"
    class="w-full font-semibold flex flex-col items-center justify-center p-4 text-lg rounded-2xl shadow-lg text-gray-700"
  >
    <%= @product.call_to_action ? @product.call_to_action : "구매하기" %>
  </a>
</div>
